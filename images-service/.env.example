# Application
APP_NAME=images-service
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# API
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
API_KEY=serpy-demo-key-2025
CORS_ORIGINS=["http://serpy.videocursosweb.com","http://localhost:8501"]

# MongoDB
MONGODB_URI=mongodb://mongo:27017
MONGODB_DATABASE=serpy_db

# Redis
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Storage
STORAGE_PATH=/images
STORAGE_TYPE=local

# Download Limits
MAX_CONCURRENT_DOWNLOADS=20
MAX_CONNECTIONS_PER_HOST=10
DOWNLOAD_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=1

# Processing (preparado para futuro)
ENABLE_WEBP_CONVERSION=false
ENABLE_OPTIMIZATION=false
JPEG_QUALITY=85
WEBP_QUALITY=85

# Webhook (opcional)
WEBHOOK_URL=

# Flower (monitoreo de Celery)
FLOWER_USER=admin
FLOWER_PASSWORD=admin
